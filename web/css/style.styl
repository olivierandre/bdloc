//	Variables
vertIndex = #a5d5b2
retourAccueil = rgba(190, 144, 212, .5)
retourAccueilHover = rgba(190, 144, 212, 1)
silver = rgb(189, 195, 199)
carrot = rgb(230, 126, 34)
turquoise = rgba(26, 188, 156, .5)
turquoiseHover = rgba(26, 188, 156, 1)
vertTitreBD = rgba(194, 208, 152, 1)
vertSuccess = #dff0d8
violetPanier = rgba(220, 198, 224, 1)
bluePanier = rgba(97, 239, 247, 1)
$keyframe-inscription = inscription
$keyframe-scale = scale
$keyframe-turn = turn
$keyframe-turnReverse = turnReverse

//	Functions
animation(propriete, arguments)
    -webkit-animation-{propriete} arguments
    -khtml-animation-{propriete} arguments
    -moz-animation-{propriete} arguments
    -ms-animation-{propriete} arguments
    -o-animation-{propriete} arguments
    animation-{propriete} arguments
    
transition(arguments...)
	-webkit-transition arguments
	-khtml-transition arguments
	-moz-transition arguments
	-ms-transition arguments
	-o-transition arguments
	transition arguments
	
transform(arguments...)
	-webkit-transform arguments
	-khtml-transform arguments
	-moz-transform arguments
	-ms-transform arguments
	-o-transform arguments
	transform
	
border-image(arguments...)
	-webkit-border-image arguments
    -moz-border-image arguments
    -o-border-image arguments
    border-image arguments
    
box-sizing()
	-webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box

filter(arguments)
	-webkit-filter arguments
    filter arguments
    
//  CSS
/*
 * Général
 */

h1, h2, h3, h4, h5, h6,
span, input, p, a, button, label, select,
figcaption, textarea, ul, li, table, td, th
	font-family Lato, sans-serif, Calibri

h1, h2, h3, h4, h5, h6, select, a, button 
    text-transform uppercase
    text-align center

a
    text-decoration none
    cursor pointer
    padding 10px 30px
    border 0
    color black
    &:hover
        text-decoration none
        color black

a:active, a:hover, submit:active
	text-decoration none
	outline none    

input
	outline none

input[type=submit], button
	text-transform uppercase
	cursor pointer
	outline none
	padding 10px 30px
	border 0
	color white

.clearfix
    clear both
    
#gestionBouton
	margin-top 100px

.retour
	background retourAccueil
	color white
	transition background .3s
	display block
	width 200px
	margin auto
	
.retour:hover
	background retourAccueilHover

 
/*
 * Header
 */
#header
	background silver
	
#nav
 	text-align right
 	margin-top 25px

#nav li
	display inline
	font-size 20px

/*
 * Accueil
 */
#inscription
	margin-top 50px
	
#inscription a
	display block
	width 500px
	background carrot
	margin auto
	color white
	font-size 30px
	
#inscription
	position relative
	animation('delay', .3s)
	animation('duration', 2s)
	animation('name', inscription)
	animation('fill-mode', backwards) 
	
/*
 * Recherche
 */
.checkbox
	display inline-block !important
	width 25%
 

/*
 * Detail
 */
.detail
	margin-top 50px
	
#image
	text-align center
	
.detail #image
	margin-bottom 50px
	
.description
	border-width 10px 0
	border-color vertTitreBD
	border-style solid
	margin-bottom 20px
	
.description p
	margin 0
	padding 10px 0

#button a, #addRemove a
	display block
	
#addRemove #cart 
	background turquoise
	transition background .3s
	
#addRemove #cart:hover
	background turquoiseHover
	
/*
 * Cart
 */
#cart
	margin-top 50px
	
.bookCart
	line-height 54px
	font-size 20px

/*
 * Account
 */
.buttonAccount
	background vertSuccess
	margin-bottom 10px

#backOptions
	margin-top 20px
	text-align center

#backOptions a
	background vertSuccess
	
/*
 * Abonnement
 */
#choixAbonnement
	margin 50px 0
	
#choixAbonnement p
	text-align center
	
#montantAbonnement
	margin-top 20px
	
.afficheCarte
	opacity 0

#patience
	position absolute
	top 50%
	left 0
	width 100%
	
.messageAttente, .wait
	float left
	
.wait
	margin-left 40px
	
.circle
	border-radius 50%
	width 80px
	height 80px;
	border 5px solid #679403
	position absolute
	border-bottom-color transparent
	
.littleCircle
	border-radius 50%
	width 40px
	height 40px;
	border 5px solid #679403
	border-top-color transparent
	position relative
	left 20px
	top 20px

/*
 * Formulaire
 */
form li
	text-align right
	
/*
 * Message
 */
.message
	text-align center
	margin-top 100px
	
/*
 * Bootstrap
 */
.alert-danger p, .alert-info
	text-align center !important

/*
 * Animation
 */
.turn
	animation('iteration-count', infinite)
	animation('delay', 1s)
	animation('duration', 2s)
	animation('name', turn)
	animation('fill-mode', backwards)
	animation('timing-function', linear)
	
.turnReverse
	animation('iteration-count', infinite)
	animation('delay', 1s)
	animation('duration', 1s)
	animation('name', turnReverse)
	animation('fill-mode', backwards)
	animation('timing-function', linear)

.patienceScale
	animation('iteration-count', infinite)
	animation('delay', 1s)
	animation('duration', 2s)
	animation('name', scale)
	animation('fill-mode', backwards) 

.scale
	animation('delay', .3s)
	animation('duration', 2s)
	animation('name', scale)
	animation('fill-mode', backwards) 
	
@keyframes {$keyframe-turn}
	0%
		transform rotate(0deg)	
	100%
		transform rotate(720deg)
		
@keyframes {$keyframe-turnReverse}
	0%
		transform rotate(0deg)	
	100%
		transform rotate(-1080deg)

@keyframes {$keyframe-inscription}
	0%
		left -2000px
	100%
		left 0px
		
@keyframes {$keyframe-scale}
	0%
		transform scale(1)
	50%
		transform scale(1.5)
	100%
		transform scale(1)