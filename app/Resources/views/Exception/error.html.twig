{% extends ':layouts:base.html.twig' %}

{% block main_content %}
<div id="main">
	<div class="container">
		<div class="row">
			<div id="choixAbonnement" class="col-xs-12">
				<h1>Oups! Une erreur est survenue</h1>
				<div class="col-xs-12 alert alert-danger">
			        <p> {{errorPaypal}} </p>
			    </div>
			    <div class="col-xs-12 alert alert-info">
			    	<ul>
			        	<li>{{ errors.name }}</li>
			        	<li>{{ errors.message }}</li>
			        	<li><a href="{{ errors.information_link }}">{{ errors.information_link }}</a></li>
			        	<li>{{ errors.debug_id }}</li>
			    	</ul>
			    </div>

			</div>
		</div>
	</div>
</div>
{% endblock %}
