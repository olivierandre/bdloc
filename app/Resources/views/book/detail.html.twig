{% extends ':layouts:base.html.twig' %}

{% block main_content %}
<div class="container">
		<div class="row">
			<div class="detail">
			   	{% if (app.user) %}
			   		<div id="image" class="col-xs-12 col-md-6">
						<img src="{{ asset('img/covers/'~book.cover)}}" title="{{ book.title }} " />
			   		</div>
					<h1>{{ book.title }}</h1>
					<div class="description">
						<p>De {{ book.illustrator.firstName }} {{ book.illustrator.lastName }}</p>
					</div>

				{% else %}
				<div id="inscription" class="col-xs-12">
					<a href="{{ path('bdloc_app_user_register') }}">Inscrivez-vous !!!</a>
			   	</div>
				{% endif %}
			</div>
			
		</div>
	</div>
{% endblock %}